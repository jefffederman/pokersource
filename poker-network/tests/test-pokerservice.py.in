import sys, os
sys.path.insert(0, "@top_srcdir@")
sys.path.insert(0, "..")

from twisted.trial import unittest, runner, reporter
import libxml2

from pokernetwork import pokerservice
from pokernetwork import pokernetworkconfig

settings_xml = """<?xml version="1.0" encoding="ISO-8859-1"?>
<server verbose="1" ping="300000" autodeal="yes" simultaneous="4" chat="yes" >
  <delays autodeal="18" round="12" position="60" showdown="30" finish="18"/>

  <table name="Table1" variant="holdem" betting_structure="100-200-no-limit" seats="10" player_timeout="60" money="PPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPP"/>
  <table name="Table2" variant="holdem" betting_structure="100-200-no-limit" seats="10" player_timeout="60" money="RRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRR"/>

  <listen tcp="19480" />

  <database name="pokernetworktest" host="@POKER_DBHOST@" user="@POKER_DBUSER@" password="@POKER_DBUSER_PASSWORD@"
            root_user="root" root_password="" schema="@top_srcdir@/database/schema.sql" command="@MYSQL@" />
  <path>@POKER_ENGINE_PKGSYSCONFDIR@ @POKER_NETWORK_PKGSYSCONFDIR@</path> 
  <users temporary="BOT"/>
</server>
"""
            
class PokerAvatarTestCase(unittest.TestCase):
    
    # -----------------------------------------------------------------------------------------------------
    def setUp(self):
        settings = pokernetworkconfig.Config([])
        settings.doc = libxml2.parseMemory(settings_xml, len(settings_xml))
        settings.header = settings.doc.xpathNewContext()
        self.service = pokerservice.PokerService(settings)
    
    # -----------------------------------------------------------------------------------------------------    
    def tearDown(self):
        del self.service
        os.system("@MYSQL@ -u root -e 'drop database pokernetworktest'")
        
    # -----------------------------------------------------------------------------------------------------    
    def test01_pass(self):
        pass

# -----------------------------------------------------------------------------------------------------
def GetTestSuite():
    suite = runner.TestSuite(PokerAvatarTestCase)
    suite.addTest(unittest.makeSuite(PokerServiceTestCase))
    return suite
    
# -----------------------------------------------------------------------------------------------------
def GetTestedModule():
    return pokerengineconfig
  
# -----------------------------------------------------------------------------------------------------
def Run():
    suite = runner.TestLoader().loadAnything(PokerAvatarTestCase)
    return runner.TrialRunner(reporter.TextReporter).run(suite)
    
# -----------------------------------------------------------------------------------------------------
if __name__ == '__main__':
    if Run().wasSuccessful():
        sys.exit(0)
    else:
        sys.exit(1)

