ASCIIDOC=$(which asciidoc)

if [[ !(-f ${ASCIIDOC}) ]]
then
	echo "Install asciidoc!"
	exit 1
fi

for PAGE in $(/bin/ls -1 *.txt)
do
	${ASCIIDOC} \
		--unsafe \
		--backend=xhtml11 \
		--conf-file=tinypoker.org.conf \
		--attribute=siteTitle="TinyPoker" \
		--attribute=generator="$(${ASCIIDOC} --version)" \
		${PAGE}
done
