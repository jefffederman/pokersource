LIB = ../lib/libpoker.a

CFLAGS = @CFLAGS@
CC = @CC@

PROGRAMS = five_card_hands seven_card_hands fish eval hcmp2

all : $(PROGRAMS)

five_card_hands: five_card_hands.o $(LIB)
	$(CC) $(CFLAGS) -o $@ $< $(LIB)

seven_card_hands: seven_card_hands.o $(LIB)
	$(CC) $(CFLAGS) -o $@ $< $(LIB)

fish: fish.o $(LIB)
	$(CC) $(CFLAGS) -o $@ $< $(LIB)

eval: eval.o $(LIB)
	$(CC) $(CFLAGS) -o $@ $< $(LIB)

hcmp2: hcmp2.o $(LIB)
	$(CC) $(CFLAGS) -o $@ $< $(LIB)

clean:
	rm -f core *.o $(PROGRAMS) 

.c.o:
	$(CC) $(CFLAGS) -I../include -c $<

