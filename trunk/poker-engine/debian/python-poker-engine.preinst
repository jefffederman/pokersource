#!/bin/bash

set -e

if [ "${DH_VERBOSE:-0}" -gt 0 ] ; then set -x ; fi

if [ "$1" = "upgrade" -a -n "$2" ] && dpkg --compare-versions "$2" lt-nl "1.0.21"; then
    #
    # Major changes in 1.0.21, forget about upgrading
    #
    rm -f /etc/poker-engine/poker.*.xml
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
