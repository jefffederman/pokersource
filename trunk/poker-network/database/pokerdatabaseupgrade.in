import getopt, sys
sys.path = "@pythonpath@".split(":") + sys.path
sys.path.insert(0, "@top_srcdir@")

from pokernetwork.pokernetworkconfig import Config
from pokernetwork.pokerdatabase import PokerDatabase

def usage():
    print """
pokerdatabaseupgrade [--help] [--dry-run] [--upgrades=directory] [configuration.xml]
"""
    
def main():
    try:
        opts, args = getopt.getopt(sys.argv[1:], "hdu", ["help", "dry-run", "upgrades=" ])
    except getopt.GetoptError:
        usage()
        sys.exit(2)
    directory = "@POKER_NETWORK_PKGDATADIR@"
    settings_file = "@POKER_NETWORK_PKGSYSCONFDIR@/poker.server.xml"
    dry_run = False
    for o, a in opts:
        if o in ("-h", "--help"):
            usage()
            sys.exit()
        if o in ("-d", "--dry-run"):
            dry_run = True
        if o in ("-u", "--upgrades"):
            directory = a

    if len(args) > 0:
        (settings_file, ) = args

    settings = Config([''])
    settings.load(settings_file)
    db = PokerDatabase(settings)
    db.upgrade(directory, dry_run)
    return 0

if __name__ == "__main__":
    sys.exit(main())
