import sys, os
sys.path.insert(0, "@top_srcdir@/pokerclient2d/data")

import unittest

from svg2gtk import SVG2Glade
from svg2gtk import SVG2Rc

class SVG2Gtk(unittest.TestCase):
    def test_SVG2Glade(self):
        svg_string = '<svg xmlns:xlink="http://www.w3.org/1999/xlink" id="game_window" width="800" height="600"><g><image id="test" x="0" y="1" width="2" height="3" xlink:href="test.png"/></g></svg>'
        glade_string = '<glade-interface><widget class="GtkWindow" id="game_window"><property name="width_request">800</property><property name="height_request">600</property><child><widget class="GtkFixed" id="game_window_fixed"><child><widget class="GtkButton" id="test"><property name="width_request">2</property><property name="height_request">3</property><property name="label"/><signal name="clicked" handler="on_test_clicked"/></widget><packing><property name="x">0</property><property name="y">1</property></packing></child></widget></child></widget></glade-interface>'
        self.assertEquals(glade_string, str(SVG2Glade(svg_string)))
    def test_SVG2Rc(self):
        svg_string = '<svg xmlns:xlink="http://www.w3.org/1999/xlink" id="game_window" width="800" height="600"><g><image id="test" x="0" y="1" width="2" height="3" xlink:href="test.png"/></g></svg>'
        rc_string = 'style "test_style" {engine "pixmap" {image {function = BOX file = "test.png"}}} widget "*game_window*test" style "test_style"\n'
        self.assertEquals(rc_string, str(SVG2Rc(svg_string)))
    def test_SVG2Glade(self):
        svg_string = '<svg xmlns:xlink="http://www.w3.org/1999/xlink" id="game_window" width="800" height="600"><g id="test_group0"><image id="test0_group0" x="0" y="1" width="2" height="3" xlink:href="test.png"/></g><use id="test_group1" xlink:href="#test_group0"/></svg>'
        glade_string = '<glade-interface><widget class="GtkWindow" id="game_window"><property name="width_request">800</property><property name="height_request">600</property><child><widget class="GtkFixed" id="game_window_fixed"><child><widget class="GtkButton" id="test0_group0"><property name="width_request">2</property><property name="height_request">3</property><property name="label"/><signal name="clicked" handler="on_test0_group0_clicked"/></widget><packing><property name="x">0</property><property name="y">1</property></packing></child><child><widget class="GtkButton" id="test0_group1"><property name="width_request">2</property><property name="height_request">3</property><property name="label"/><signal name="clicked" handler="on_test0_group1_clicked"/></widget><packing><property name="x">0</property><property name="y">1</property></packing></child></widget></child></widget></glade-interface>'
        self.assertEquals(glade_string, str(SVG2Glade(svg_string)))
if __name__ == '__main__':
    unittest.main()

