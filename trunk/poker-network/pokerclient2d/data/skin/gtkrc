# -*- shell-script -*-
style "player_widget"
{
    bg[NORMAL] = "#557385"
    bg[ACTIVE] = "#557385"
    bg_pixmap[NORMAL] = "player.png"
    bg_pixmap[ACTIVE] = "player_active.png"
}

style "table_background"
{
    bg_pixmap[NORMAL] = "table_background.png"
}

style "bet_widget"
{
    engine "pixmap"
    {
	image
	{
	    function	= BOX
	    file	= "bet.png"
	    border	= { 0, 0, 0, 0 }
	    stretch	= TRUE
	}
    }
    fg[INSENSITIVE] = "#000000"
    font_name="FreeSans Bold 6"
}

