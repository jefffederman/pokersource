}

style "switch_table_radio1"
{
    engine "pixmap"
    {
	image
	{
	    state	= NORMAL
	    function	= BOX
	    file	= "table1_normal.png"
	    border	= { 0, 0, 0, 0 }
	    stretch	= TRUE
	}
    }
    engine "pixmap"
    {
	image
	{
	    state	= PRELIGHT
	    function	= BOX
	    file	= "table1_active.png"
	    border	= { 0, 0, 0, 0 }
	    stretch	= TRUE
	}
    }
    engine "pixmap"
    {
	image
	{
	    state	= ACTIVE
	    function	= BOX
	    file	= "table1_active.png"
	    border	= { 0, 0, 0, 0 }
	    stretch	= TRUE
	}
    }
}
